<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="ApplicationWindow" parent="AdwApplicationWindow">
    <child>
      <object class="AdwBreakpoint" id="breakpoint">
        <condition>max-width: 720sp</condition>
      </object>
    </child>

    <property name="content">
      <object class="GtkOverlay" id="overlay">
        <property name="child">
          <object class="AdwNavigationView" id="navigationview"/>
        </property>

        <child type="overlay">
          <object class="GtkOverlay" id="notification_overlay">
            <property name="can_target">0</property>
            <property name="valign">start</property>
            <property name="child">
              <object class="GtkRevealer" id="notification_revealer">
                <property name="can_target">0</property>
                <property name="halign">center</property>
                <property name="child">
                  <object class="GtkLabel" id="notification_label">
                    <property name="label">app notification message</property>
                    <property name="justify">center</property>
                    <property name="wrap">1</property>
                    <style>
                      <class name="app-notification"/>
                    </style>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
