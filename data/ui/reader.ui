<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="ReaderPage" parent="AdwNavigationPage">
    <property name="tag">reader</property>
    <property name="title" translatable="yes">Reader</property>
    <property name="can-pop">False</property>

    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="GtkRevealer" id="headerbar_revealer">
            <property name="reveal_child">True</property>
            <child>
              <object class="AdwHeaderBar">
                <child type="start">
                  <object class="GtkButton" id="back_button">
                    <property name="receives_default">1</property>
                    <property name="icon-name">go-previous-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Back</property>
                  </object>
                </child>
                <property name="title-widget">
                  <object class="AdwWindowTitle" id="title"/>
                </property>
                <child type="end">
                  <object class="GtkMenuButton" id="menu_button">
                    <property name="receives_default">1</property>
                    <property name="icon-name">view-more-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Menu</property>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkToggleButton" id="fullscreen_button">
                    <property name="receives_default">1</property>
                    <property name="icon-name">view-fullscreen-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Toggle fullscreen mode</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <property name="content">
          <object class="GtkOverlay" id="reader_overlay"/>
        </property>
      </object>
    </property>
  </template>
</interface>
