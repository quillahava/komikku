<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="DownloadManagerPage" parent="AdwNavigationPage">
    <property name="tag">download-manager</property>
    <property name="title" translatable="yes">Download Manager</property>

    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="start">
              <object class="GtkButton" id="left_button">
                <property name="visible">False</property>
              </object>
            </child>
            <property name="title-widget">
              <object class="AdwWindowTitle" id="title">
                <property name="title" translatable="yes">Download Manager</property>
              </object>
            </property>
            <child type="end">
              <object class="GtkMenuButton" id="menu_button">
                <property name="icon-name">view-more-symbolic</property>
                <property name="tooltip-text" translatable="yes">Menu</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="start_stop_button">
                <property name="icon-name">media-playback-start-symbolic</property>
                <property name="tooltip-text" translatable="yes">Start/Stop download</property>
              </object>
            </child>
          </object>
        </child>

        <property name="content">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkScrolledWindow">
                <property name="vexpand">1</property>
                <property name="hscrollbar_policy">never</property>
                <property name="child">
                  <object class="GtkViewport">
                    <property name="scroll-to-focus">true</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum_size">768</property>
                        <property name="margin-top">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="margin-start">12</property>
                        <child>
                          <object class="GtkStack" id="stack">
                            <child>
                              <object class="GtkStackPage">
                                <property name="name">list</property>
                                <property name="child">
                                  <object class="GtkListBox" id="listbox">
                                    <property name="valign">start</property>
                                    <property name="selection_mode">none</property>
                                    <style>
                                      <class name="boxed-list"/>
                                    </style>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkStackPage">
                                <property name="name">empty</property>
                                <property name="child">
                                  <object class="AdwStatusPage" id="empty_status_page">
                                    <property name="icon_name">document-save-symbolic</property>
                                    <property name="title" translatable="yes">No downloads</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkActionBar" id="selection_mode_actionbar">
                <property name="revealed">0</property>
                <child type="start">
                  <object class="GtkButton">
                    <property name="icon-name">user-trash-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Delete</property>
                    <property name="action-name">app.download-manager.delete-selected</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
